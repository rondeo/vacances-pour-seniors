{# Header #}
{% include 'header.html.twig' %}

<main id="main-container">

	<div id="page-content" class="page-content"
		data-node-type="{{ node_type }}"
		data-meta-title="{{ wp_get_document_title() }}"
		data-body-class=""
	>

		{% block content %}
			{% include 'partials/hero.html.twig' with { title: post.title, text: post.text } %}
			{% if post.content %}
				<div class="Site-container">
					<div class="row margin-y-5 margin-y-md-7">
						<div class="col-12 col-md-6{{ related_post ? ' offset-md-1' : ' offset-md-5' }}">
							{{- post.content -}}
						</div>
					</div>
				</div>
			{% endif %}
		{% endblock %}


	</div>
</main>


{# Footer #}
{% include 'footer.html.twig' %}
